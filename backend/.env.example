# Application Settings
APP_NAME="Task Scheduling Agent V2"
DEBUG=False
SECRET_KEY=change-me-to-a-secure-random-string

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=task_scheduling_agent
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# File Uploads
UPLOADS_DIR=uploads
MAX_UPLOAD_BYTES=26214400

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_ENABLE_ROUTING=true
GROQ_ENABLE_GUARDS=true
GROQ_ENABLE_CACHING=true
GROQ_CACHE_TTL_SECONDS=3600

# Redis Configuration (for Groq quota tracking and caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
